<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color"
    tools:context=".ExerciseActivity">


    <TextView
        android:id="@id/idTVHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Fitness App"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/idLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVHeading"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:padding="9dp"
                android:text="150"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="KCAL"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:padding="9dp"
                android:text="50-55"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Min"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/idLL"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVExercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idLL"
        android:layout_marginTop="10dp" />


    <View
        android:id="@+id/blueRectangle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadowed_background" />

    <ImageButton
        android:id="@+id/button_1id"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:layout_above="@id/blueRectangle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="-2dp"
        android:backgroundTint="#0000FF"
        android:contentDescription="@string/description"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/scale" />

    <ImageButton
        android:id="@+id/button_2id"
        android:layout_width="107dp"
        android:layout_height="84dp"
        android:layout_above="@id/blueRectangle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="275dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="-2dp"
        android:backgroundTint="#0000FF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/steps" />

    <ImageButton
        android:id="@+id/button_3id"
        android:layout_width="98dp"
        android:layout_height="71dp"
        android:layout_above="@id/blueRectangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="676dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="-16dp"
        android:backgroundTint="#0000FF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/dumbell" />













</RelativeLayout>